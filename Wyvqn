-- FULL DRAGGING SYSTEM - ANYWHERE ON MAINFRAME
local dragging = false
local dragInput
local dragStart
local startPos

local function updateInput(input)
    if not dragging then return end
    
    local delta = input.Position - dragStart
    MainFrame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale, 
        startPos.Y.Offset + delta.Y
    )
end

-- Make ENTIRE MainFrame draggable (except text boxes and buttons)
MainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseButton1 then
        -- Check if we're clicking on a text box or button
        local target = input.Target
        if target:IsA("TextBox") or target:IsA("TextButton") then
            if target ~= MainFrame and target ~= CloseButton then
                return -- Don't drag if clicking on interactive elements
            end
        end
        
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        
        -- Visual feedback
        MainFrame.BackgroundColor3 = Color3.fromRGB(35, 55, 95)
        
        local connection
        connection = input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
                MainFrame.BackgroundColor3 = Color3.fromRGB(25, 40, 65)
                if connection then
                    connection:Disconnect()
                end
            end
        end)
    end
end)

MainFrame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        updateInput(input)
    end
end)

-- Also make TitleBar draggable separately
TitleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        
        TitleBar.BackgroundColor3 = Color3.fromRGB(60, 100, 160)
        
        local connection
        connection = input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
                TitleBar.BackgroundColor3 = Color3.fromRGB(40, 80, 140)
                if connection then
                    connection:Disconnect()
                end
            end
        end)
    end
end)

-- SPAM SYSTEM
local function safeSendMessage(message)
    local success, result = pcall(function()
        -- Try new chat system first
        local textChatService = game:GetService("TextChatService")
        if textChatService and textChatService.TextChannels then
            local channel = textChatService.TextChannels.RBXGeneral
            if channel then
                channel:SendAsync(message)
                return true
            end
        end
        
        -- Try old chat system
        local replicatedStorage = game:GetService("ReplicatedStorage")
        if replicatedStorage:FindFirstChild("DefaultChatSystemChatEvents") then
            local chatEvents = replicatedStorage.DefaultChatSystemChatEvents
            if chatEvents:FindFirstChild("SayMessageRequest") then
                chatEvents.SayMessageRequest:FireServer(message, "All")
                return true
            end
        end
        
        return false
    end)
    
    if not success then
        warn("Message failed: " .. tostring(result))
        return false
    end
    return true
end

local function sendSingleMessage()
    local message = messageBoxes[currentMessageIndex].Text
    if message and message ~= "" then
        safeSendMessage(message)
        print("Sent single: " .. message)
    end
    
    -- Move to next message for next single spam
    currentMessageIndex = currentMessageIndex + 1
    if currentMessageIndex > 6 then
        currentMessageIndex = 1
    end
end

local function sendNextMessage()
    if not spamActive then return end
    
    local message = messageBoxes[currentMessageIndex].Text
    if message and message ~= "" then
        safeSendMessage(message)
        print("Sent auto: " .. message)
    end
    
    currentMessageIndex = currentMessageIndex + 1
    if currentMessageIndex > 6 then
        currentMessageIndex = 1
    end
end

local function startSpam()
    if spamActive and spamMode == "auto" then return end
    
    if spamMode == "auto" then
        -- Auto mode
        spamActive = true
        currentMessageIndex = 1
        StatusLabel.Text = "Status: ON | Mode: AUTO | Interval: 1.5s"
        StatusLabel.TextColor3 = Color3.fromRGB(0, 255, 0) -- Green when active
        
        if spamThread then
            spamThread:Disconnect()
        end
        
        spamThread = RunService.Heartbeat:Connect(function()
            if spamActive then
                sendNextMessage()
                local elapsed = 0
                while elapsed < SPAM_INTERVAL and spamActive do
                    elapsed = elapsed + RunService.Heartbeat:Wait()
                end
            end
        end)
    else
        -- Single mode - send just one message
        sendSingleMessage()
        StatusLabel.Text = "Status: SINGLE SENT | Mode: SINGLE | Interval: 1.5s"
        StatusLabel.TextColor3 = Color3.fromRGB(255, 255, 0) -- Yellow for single
        
        -- Reset status after 2 seconds
        delay(2, function()
            if not spamActive then
                StatusLabel.Text = "Status: OFF | Mode: SINGLE | Interval: 1.5s"
                StatusLabel.TextColor3 = Color3.fromRGB(255, 215, 0) -- Back to gold
            end
        end)
    end
end

local function stopSpam()
    spamActive = false
    if spamThread then
        spamThread:Disconnect()
        spamThread = nil
    end
    StatusLabel.Text = "Status: OFF | Mode: " .. (spamMode == "auto" and "AUTO" or "SINGLE") .. " | Interval: 1.5s"
    StatusLabel.TextColor3 = Color3.fromRGB(255, 215, 0) -- Gold color
end

-- Update mode buttons appearance
local function updateModeButtons()
    if spamMode == "auto" then
        AutoModeButton.BackgroundColor3 = Color3.fromRGB(30, 100, 200) -- Bright blue
        AutoModeButton.TextColor3 = Color3.fromRGB(255, 215, 0) -- Gold
        SingleModeButton.BackgroundColor3 = Color3.fromRGB(50, 80, 120) -- Dark blue
        SingleModeButton.TextColor3 = Color3.fromRGB(255, 215, 0) -- Gold
    else
        SingleModeButton.BackgroundColor3 = Color3.fromRGB(30, 100, 200) -- Bright blue
        SingleModeButton.TextColor3 = Color3.fromRGB(255, 215, 0) -- Gold
        AutoModeButton.BackgroundColor3 = Color3.fromRGB(50, 80, 120) -- Dark blue
        AutoModeButton.TextColor3 = Color3.fromRGB(255, 215, 0) -- Gold
    end
end

-- BUTTON EVENTS
StartButton.MouseButton1Click:Connect(function()
    startSpam()
end)

StopButton.MouseButton1Click:Connect(function()
    stopSpam()
end)

CloseButton.MouseButton1Click:Connect(function()
    stopSpam()
    ScreenGui:Destroy()
end)

-- Mode button events
AutoModeButton.MouseButton1Click:Connect(function()
    spamMode = "auto"
    updateModeButtons()
    StatusLabel.Text = "Status: OFF | Mode: AUTO | Interval: 1.5s"
end)

SingleModeButton.MouseButton1Click:Connect(function()
    spamMode = "single"
    updateModeButtons()
    StatusLabel.Text = "Status: OFF | Mode: SINGLE | Interval: 1.5s"
end)

